
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>CarRental</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
    </button>
  
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Car Rental</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a href="@Url.Action("Cars","Cars")" class="nav-link" onclick="Cars">Cars</a>
                </li>
                <li class="nav-item">
                    <a  href="@Url.Action("RentedCar","RentedCar")" class="nav-link">Rent a Car</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Person","Person")" class="nav-link">Person</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Company","Company")" class="nav-link">Company</a>
                </li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("NewAccount","NewAccount")"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="@Url.Action("PersonLogin","PersonLogin")"><span class="glyphicon glyphicon-log-in"></span>Customer Login</a></li>
                <li><a href="@Url.Action("Login","Login")"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>

            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

